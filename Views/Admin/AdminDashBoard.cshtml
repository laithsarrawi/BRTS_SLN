@model BRTS.Web.Models.DashBoardViewModel
@{
    ViewData["Title"] = "AdminDashBoard";
}

<style>
    
    table {
        background-image: src(/wwwroot/busss.jpg);
        font-family: Arial, sans-serif;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
    }

    caption {
        font-size: xx-large;
    }

    a {
        text-decoration: none;
        color: #007bff;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<nav>
    <a href="/Admin/CreateTrip">Create Trip</a> |
    <a href="/Admin/AddNewBus">Add New Bus</a>
</nav>

<table>
    <thead>
        <tr>
            <th>accountId</th>
            <th>firstName</th>
            <th>lastName</th>
            <th>Age</th>
            <th>role</th>
            <th>emailAddress</th>
            <th>phoneNumber</th>
            <th>gender</th>
            <th>userName</th>
            <th>password</th>
            <th>status</th>
            <th>imageId</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var acc in Model.accounts)
        {
            <tr>
                <td>@acc.accountId</td>
                <td>@acc.firstName</td>
                <td>@acc.lastName</td>
                <td>@acc.role</td>
                <td>@acc.emailAddress</td>
                <td>@acc.phoneNumber</td>
                <td>@acc.gender</td>
                <td>@acc.userName</td>
                <td>@acc.password</td>

                
            </tr>
        }
     
    </tbody>
    

    
</table>
<br/>
<table>
    <caption style="font-size:xx-large" >Trips List</caption>
    <thead>
        <tr>
            <th>TripId</th>
            <th>TripGoingFrom</th>
            <th>TripDestination</th>
            <th>StartDateAndTime</th>
            <th>EndDateAndTime</th>
            <th>TripName</th>
            <th>Drop Trip</th>
            <th>Edit Trip</th>

            
           
        </tr>
    </thead>
    <tbody>
        @foreach (var trip in Model.trips)
        {
            <tr>
                <td>@trip.TripId</td>
                <td>@trip.TripGoingFrom</td>
                <td>@trip.TripDestination</td>
                <td>@trip.StartDateAndTime</td>
                <td>@trip.EndDateAndTime</td>
                <td>@trip.TripName</td>
                <td>
                    <form action="/Admin/DropTrip" method="post">
                        <input type="hidden" name="TripId" value="@trip.TripId" />
                        <input type="submit" value="DropTrip">

                    </form>
                </td>
                <td>
                    <form action="/Admin/EditTrip" method="post">
                        <input type="hidden" name="TripId" value="@trip.TripId" />
                        <input type="submit" value="EditTrip">
                    </form>
                </td>
            </tr>
        }
        
    </tbody>



</table>
<br />
<table>
    <thead>
        <tr>
            <th>BusId</th>
            <th>TripId</th> 
            <th>Captin_Id</th>
            <th>TotalSeats</th>
            <th>AvailabelSeats</th>
            <th>Drop Bus</th>
            <th>Edit Bud</th>
    
        </tr>
    </thead>
    <tbody>
      
        @foreach (var trip in Model.buses)
        {
            <tr>
                <td>@trip.BusId</td>
                <td>@trip.TripId</td>
                <td>@trip.Captin_Id</td>
                <td>@trip.TotalSeats</td>
                <td>
                    <form action="/Admin/DropBus" method="post">
                        <input type="hidden" name="BusId" value="@trip.BusId" />
                        <input type="submit" value="DropBus">

                    </form>
                </td>
                <td>
                    <form action="/Admin/EditBus" method="post">
                        <input type="hidden" name="BusId" value="@trip.BusId" />
                        <input type="submit" value="EditBus">

                    </form>
                </td>
            </tr>
        }

    </tbody>



</table>