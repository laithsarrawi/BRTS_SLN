@{
    ViewBag.Title = "Sign In";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header"><h2>@ViewBag.Title</h2></div>
                <div class="card-body">
                    <form method="post" action="/User/SignInRequest">
                        <div class="form-group">
                            <label for="emailAddress">Email or Username</label>
                            <input type="text" class="form-control" id="emailAddress" name="emailAddress" placeholder="Enter email or username">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-primary d-block mx-auto">Sign In</button>
                    </form>
                    <hr>
                    <p class="text-center">Don't have an account? <a href="/User/SignUp">Sign Up</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
