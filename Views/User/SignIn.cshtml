@{
    ViewBag.Title = "Sign In";
}


<style>
    
    .container {
        max-width: 1200px;
        margin: 0 auto;
        border: 5px solid #3498db;
        border-radius: 10px;
        padding: 20px;
        background-color: #f0f0f0;
    }

    
    h2 {
        font-size: 2em;
        margin-bottom: 20px;
        text-align: center;
        color: #333333;
    }

    
    .card {
        box-shadow: 0 0 10px 5px rgba(0, 0, 0, 0.1);
        background-image: linear-gradient(to right, #2196f3, #0d47a1); 
        color: white; 
    }

    
    label, input {
        color: #333333;
    }

    
    input {
        border: 2px solid #3498db;
        border-radius: 5px;
        padding: 10px;
        width: 80%;
    }

    
    .btn-primary {
        background-color: #4caf50;
        color: white;
        border: none;
        padding: 15px 30px;
        cursor: pointer;
        font-size: 1.2em;
    }

        .btn-primary:hover {
            background-color: #2e7d32;
            transform: scale(1.1);
            transition: all 0.3s;
        }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header"><h2>@ViewBag.Title</h2></div>
                <div class="card-body">
                    <form method="post" action="/User/SignInRequest">
                        <div class="form-group">
                            <label for="emailAddress">Email or Username</label>
                            <input type="text" class="form-control" id="emailAddress" name="emailAddress" placeholder="Enter email or username">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-primary d-block mx-auto">Sign In</button>
                    </form>
                    <hr>
                    <p class="text-center">Don't have an account? <a href="/User/SignUp">Sign Up</a></p>
                </div>
            </div>
        </div>
    </div>
</div>